- content_for :page_css do
  = stylesheet_link_tag "sharepage"
- content_for :titlebar_nav do
  %strong How was your donation experience today?
  %br
  = link_to "Click here to take a short survey.", "http://www.surveymonkey.com/s/JT2L6MC"


.widegreenbox
  .greenboxcontent
    .sharebox-left
      #campaignlogo{:style => "padding-bottom:20px"}
        = image_tag 'sites/ou/ou_logotitle.jpg', width: 520, height: 120
      %hr
      %h1.shareheading
        #{@pledge.donor.first_name.capitalize}, thank you
        %br
        for joining the cause!
      %h4{:style => "text-transform:uppercase; margin:10px 0 20px 0;"} You are donor ##{donor_number(@pledge.campaign)} to this campaign
      %h3
        Now, tell others about this great cause,
        %br
        and ask them to take the penny pledge too!
    .sharebox-right
      %h5 Tell my friends on:
      %p.middletext
        %a{:href => ""}
          = image_tag 'btn-share-facebook.gif', height: 40, border: 0, width: 132
      %p.middletext
        %a{:href => "https://twitter.com", :onclick => "return popitup('https://twitter.com/share?url=http%3A%2F%2Fwww.kiindly.com%2F')"}
          = image_tag 'btn-share-twitter.gif', border: 0
      %p.middletext
        %a{"count-layout" => "none", :href => "http://pinterest.com", :onclick => "return popitup('http://pinterest.com/pin/create/button/?url=www.oupledge.com&media=http%3A%2F%2Fkiindly.net%2Fsites%2Foaklandalum%2Foaklandalum-pinterest.jpg&description=Join%20the%20with%20the%20Oakland%20University%20Alum%20in%20the%20OU%20Scholarship%20Penny%20Pledge.%20Every%20person%20and%20every%20penny%20counts.%20http%3A%2F%2Fwww.oupledge.com')"}
          = image_tag 'btn-share-pinterest.gif', height: 40, border: 0, width: 132
      %p &nbsp;
      %p
        %a{:href => "http://www.kiindly.com", :target => "_blank"} Learn more about kiindly.com &raquo;
        %br
        %a{:href => "www.oualumni.com", :target => "_blank"} Learn more about OUAA Schollarship Fund &raquo;
    %br.clear
.paddingbox
%br.clear



