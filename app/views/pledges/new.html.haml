- content_for :page_css do
  = stylesheet_link_tag "paymentpage"
- content_for :page_javascripts do
  = javascript_include_tag "pledges"
- content_for :titlebar_nav do
  = link_to "Help", "#", class: "help"

#paymentmain
  .campaignlogoblock
    = image_tag "sites/ou/ou_logotitle.jpg", height: "120", width: "520", class: "campaignlogoimg"
  = form_for [@campaign, @pledge], url: campaign_pledges_path(@campaign) do |p|
    = hidden_field_tag :stripe_card_token
    = p.hidden_field :pledge_type
    = p.hidden_field :amount
    .paymentcontentblock
      %h3 Fantastic! Now we just need a few details...
      %p You're just 1 step away from completing your contribution.
      %p
        %h3 Billing Information
      #facebook_billing
        %p= render 'facebook_fields'
        %p Or enter billing information manually:
      %p= render partial: 'billing_information', locals: { p: p }
      %hr.clear
    .paymentcontentblock
      %h3 Payment information
      %ul#paymentform
        %li#payment-type{:style => "width:500px;"}
          = image_tag "visa_32.png", height: 32, width: 32, alt: "Visa"
          = image_tag "mastercard_32.png", height: 32, width: 32, alt: "Mastercard"
          = image_tag "amex_32.png", height: 32, width: 32, alt: "American Express"
          = image_tag "discover_32.png", height: 32, width: 32, alt: "Discover"
          = image_tag "jcb_32.png", height: 32, width: 32, alt: "JCB"
        %li#payment-email
          Card Number
          %span.x10 (no spaces please)
          %br
          = text_field_tag :card_number, nil, name: nil, id: 'card_number'
        %li#payment-zip
          CVC
          %span.x10
            %a{:href => ""} what is this?
          %br
          = text_field_tag :card_code, nil, name: nil, maxlength: 4, id: 'card_code', class: 'short'
        %li#payment-zip
          Expiration
          %span.x10 (mm/yy)
          %br
          = select_month nil, { add_month_numbers_true: true }, { name: nil, id: 'card_month', maxlength: 2, class: 'short' }
          = select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year", maxlength: 2, class: 'short'}
      #stripe_error.donation_error
        %noscript JavaScript is not enabled and is required for this form. First enable it in your web browser settings.
    .paymentcontentblock
      .optincheck
        = check_box_tag "accept", 1, false, class: 'rad'
      .optintext
        I agree to the
        %a{:href => ""} Terms &amp; Conditions
        of Kiindly.com
      .optincheck
        = check_box_tag "agree_to_terms", 1, false, class: 'rad'
      .optintext
        I would like to receive email regarding news and special events
        from the Oakland University Alumni Association
      %p
        %button.submitbtn{:type => "submit", :id => "submit_donation"} SUBMIT
      %hr.clear
