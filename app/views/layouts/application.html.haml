!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title Charity / Campaign - Kiindly.com Giving Together
    = stylesheet_link_tag "application", "http://fonts.googleapis.com/css?family=Nunito:300,700", media: "all"
    = yield :page_css
    = javascript_include_tag "https://js.stripe.com/v1/", "http://connect.facebook.net/en_US/all.js", "application"
    = csrf_meta_tags
    = tag :meta, name: "stripe-key", content: STRIPE_PUBLISHABLE_KEY
    = yield :show_functions
  %body
    #fb-root
    #bodycontent
      = render 'layouts/titlebar'
      #mainbodycontent
        = yield
    = render 'layouts/footer'
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-413938-49']);
      _gaq.push(['_setDomainName', 'none']);
      _gaq.push(['_setAllowLinker', true]);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
