!!!
%html{"xmlns" => "http://www.w3.org/1999/xhtml"}
  %head
    = tag :meta, "http-equiv" => "Content-Type", "content" => "text/html; charset=UTF-8"
    = yield :page_title
    = favicon_link_tag
    = stylesheet_link_tag "application", "https://fonts.googleapis.com/css?family=Nunito:300,700", params[:controller], media: "all"
    = yield :page_css
    = javascript_include_tag "https://js.stripe.com/v2/", "application", params[:controller]
    = yield :page_javascripts
    = csrf_meta_tags

    = tag :meta, name: "stripe-key", content: AccessToken.stripe_publishable_key(@campaign.subdomain, @stripe_mode_param)
    = yield :show_functions
    = javascript_include_tag "google_analytics", "tabs"

    = render 'layouts/facebook_meta_tags'

    -# Color Picker
    = stylesheet_link_tag 'mcColorPicker/mcColorPicker'
    = javascript_include_tag 'mcColorPicker/mcColorPicker'

  %body
    #bodycontent
      = render 'layouts/titlebar'
      = yield

    = render 'layouts/footer'
