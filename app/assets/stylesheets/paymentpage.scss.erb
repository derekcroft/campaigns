@charset "UTF-8";

body {
    background-color: #FFF;
    font-family: Nunito, arial, sans-serif;
    font-weight: 300;
    font-size: 14px;
    line-height: 20px;
    text-align: left;
    color: #282828;
    width: 100%;
    background-image: url(<%= asset_path 'bg-short-top.gif' %>);
    background-repeat: repeat-x;
    background-position: top;
    margin: 0;
    padding: 0;
}

#paymentmain {
    width: 560px;
    float: left;
    background-color: #4fba69;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
    border: 1px solid;
    position: relative;
    margin-bottom: 40px;
    border-color: #5ed88a #15562d #15562d #5ed88a;
    padding: 20px;
}

.campaignlogoblock {
    width: 540px;
    background-color: #FFF;
    clear: both;
    margin: 0 0 20px;
    padding: 10px 10px 0;
}

.campaignlogoimg {
    width: 540px;
    height: 120px;
    margin: 0;
    padding: 0;
}

.paymentcontentblock {
    width: 520px;
    background-color: #FFF;
    clear: both;
    margin: 0 0 20px;
    padding: 20px 20px 10px;
}

input {
    width: 240px;
    border: 1px solid #4fba69;
    height: 28px;
    font-size: 14px;
    color: #4fba69;
    margin: 0 0 5px;
}

input.short {
    width: 80px;
}

input.long {
    width: 500px;
}

input.rad {
    border: 0 !important;
    width: auto !important;
    margin: 0 5px 0 0;
}

#payment-type img {
    margin: 5px 20px 0 0;
}

.optincheck {
    float: left;
    width: 30px;
}

.optintext {
    width: 500px;
    margin: 0 0 20px;
}

.submitbtn {
    background: #333;
    color: #e9d54f;
    font-size: 16px;
    letter-spacing: -.5pt;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
    border: 1px solid;
    font-weight: 700;
    font-family: Nunito, arial;
    border-color: #989898 #303030 #303030 #989898;
    padding: 6px 10px;
}

.submitbtn:active {
    border-color: #303030 #989898 #989898 #303030;
}

#rightprogress {
    width: 320px;
    float: right;
    background-color: #898989;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
    border: 1px solid;
    border-color: #a2a2a2 #393939 #898989 #a2a2a2;
    margin: 0;
    padding: 20px 20px 0;
}

.rightcontentblock {
    width: 280px;
    background-color: #FFF;
    clear: both;
    margin: 0 0 20px;
    padding: 20px 20px 10px;
}

#donation-summary li {
    list-style: none;
    float: left;
    width: 110px;
    text-indent: inherit;
    font-size: 12px;
    padding: 3px 0;
}

.donsum-right {
    width: 160px !important;
    color: #333;
    font-size: 15px !important;
    font-weight: 700;
}

h3 {
    color: #4fba69;
    font-size: 22px;
    font-weight: 700;
    margin: 0;
    padding: 0;
}

h4 {
    color: #4fba69;
    font-size: 18px;
    font-weight: 700;
    margin: 0;
    padding: 0;
}

#bodycontent a {
    font-weight: 700;
    color: #4fba69;
}

#righttopnav {
    color: white;

    a {
        color: white;
        font-weight: normal;
    }
}

hr {
    border: 0;
    color: #fff;
}

#billingform, #paymentform, #donation-summary {
    text-indent: inherit;
    padding: 0;
}

#billingform li, #paymentform li {
    float: left;
    list-style: none;
    label,select,input {
        display: block;
    }
    text-indent: inherit;
    width: 260px;
    padding: 0;
}

#paymentform li select {
    display: inline;
}


