@charset "UTF-8";

body {
background-color:#FFF;
font-family:Nunito, arial, sans-serif;
font-weight:300;
font-size:14px;
line-height:20px;
text-align:left;
color:#282828;
width:100%;
background-image:url(<%= asset_path 'bg-short-top.gif' %>);
background-repeat:repeat-x;
background-position:top;
margin:0;
padding:0;
}

#righttopnav {
color:#4fba69;
padding:10px 0 0;
}

.content p {
color:#fff;
}

.widegreenbox {
width:930px;
float:left;
background-color:#4fba69;
-webkit-border-radius:10px;
-moz-border-radius:10px;
border-radius:10px;
border:1px solid;
position:relative;
margin-bottom:10px;
border-color:#5ed88a #15562d #15562d #5ed88a;
padding:20px;
}

.sharebox-left {
width:540px;
height:280px!important;
float:left;
background:#FFF;
text-align:center;
overflow:hidden;
margin:0;
padding:0 0 0 10px;
}

.sharebox-left h1,.sharebox-left h2,.sharebox-left h3,.sharebox-left h4 {
text-align:center;
}

.sharebox-left h1 {
color:#4fba69;
font-size:28px;
font-weight:700;
margin:0;
padding:0;
}

.sharebox-left h2 {
color:#282828;
font-size:16px;
font-weight:700;
line-height:25px;
margin:0;
padding:0;
}

.sharebox-right {
width:330px;
height:280px;
float:right;
background:#FFF;
overflow:hidden;
margin:0;
padding:20px;
}

.sharebox-right ul {
padding-left:10px;
}

.rightbox-dkgray {
width:378px;
background-color:#525252;
-webkit-border-radius:10px;
-moz-border-radius:10px;
border-radius:10px;
border:1px solid;
clear:both;
text-align:left;
color:#FFF;
border-color:#525252 #393939 #222 #777;
margin:0 0 10px;
padding:10px;
}

#diduknow h3 {
color:#FFF;
font-size:18px;
font-weight:700;
text-transform:uppercase;
margin:0;
padding:0;
}

h4 {
color:#4fba69;
font-size:15px;
font-weight:700;
margin:0;
padding:0;
}

#bodycontent a {
color:#4fba69!important;
font-weight:700;
}