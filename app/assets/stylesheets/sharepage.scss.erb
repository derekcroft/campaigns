@charset "UTF-8";
/* CSS Document */

body {
    padding: 0;
    margin: 0;
    background-color: #ffffff;
    font-family: 'Nunito', arial, sans-serif;
    font-weight: 300;
    font-size: 14px;
    line-height: 20px;
    text-align: left;
    color: #282828;
    width: 100%;
    background-image: url(<%= asset_path 'bg-short-top.gif' %>);
    background-repeat: repeat-x;
    background-position: top;
}

#righttopnav {
    color: #4fba69;
    padding: 10px 0 0 0;
}

.content p {
    color: #fff;
}

/* Modal */

/* Top section */

.widegreenbox {
    width: 930px;
    float: left;
    background-color: #4fba69;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
    padding: 20px;
    border: 1px solid;
    border-color: #5ed88a #15562d #15562d #5ed88a;
    position: relative;
    margin-bottom: 10px;
}

.greenboxcontent {
    width: 930px;
    background-image: url(<%= asset_path 'bg-2col-whgrwh.gif' %>);
    background-repeat: repeat-y;
    background-position: top left;
    padding: 0;
    margin: 0;
    border: 0;
}

.sharebox-left {
    width: 520px;
    float: left;
    padding: 0;
    margin: 0;
    text-align: center;
    overflow: hidden;
}

#campaignlogo {
    float: left;
    clear: both;
    padding: 0;
}

.sharebox-left H1 {
    margin: 20px 0 0 0;
    clear: both;
    line-height: 30px;
    font-size: 20px;
}

.sharebox-left H1, .sharebox-left h2, .sharebox-left h3, .sharebox-left h4 {
    text-align: center;
}

.sharebox-left H1 {
    color: #4fba69;
    font-size: 28px;
    font-weight: 700;
    padding: 0;
    margin: 0;
}

.sharebox-left H2 {
    color: #282828;
    font-size: 16px;
    font-weight: 700;
    padding: 0;
    margin: 0;
    line-height: 25px;
}

.sharebox-right {
    width: 340px;
    height: 280px;
    float: right;
    padding: 30px;
    margin: 0;
    overflow: hidden;
}

.sharebox-right ul {
    padding-left: 10px;
}

/* Other */

.socialtrio {
    width: 450px;
    padding: 0;
    margin: 0 auto;
    text-align: center;
}

.socialtrio li {
    float: left;
    width: 100px;
    list-style: none;
    width: 150px;
}

.paddingbox {
    clear: both;
    width: 10px;
    height: 150px;
}

/* Common classes */
H4 {
    color: #4fba69;
    font-size: 15px;
    font-weight: 700;
    padding: 0;
    margin: 0;
}

H5 {
    color: #282828;
    font-size: 16px;
    font-weight: 700;
    padding: 0;
    margin: 0;
    text-align: center;
}

.middletext {
    text-align: center !important;
}

#bodycontent a {
    color: #4fba69 !important;
    font-weight: 700;
}