/* tooltip styling. by default the element to be styled is .tooltip  */
.tooltip {
  display: none;
  background: url(<%= asset_path "black_arrow_bottom.png" %>);
  font-size: 9px;
  height: 70px;
  line-height: normal;
  width: 160px;
  padding: 25px;
  color: #eee;
  z-index: 999;
  p {
    margin: 0px;
  }
}